<odoo>
    <template id="new_styles_assets" name="new styles assets" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
            <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

            <link rel="stylesheet" type="text/css" href="/theme_vivre/static/src/scss/snippets.scss" />
            <link rel="stylesheet" type="text/css" href="/theme_vivre/static/src/scss/main.scss" />
            <script type="text/javascript" src="/theme_vivre/static/src/js/snippets.js"></script>
        </xpath>
    </template>

    <!-- payment -->
    <template id="inherit_payment" inherit_id="website_sale.payment" name="Payment">
        <xpath expr="//div[@id='payment_method']/t/t[11]" position="replace">
            <t t-set="back_button_txt">Return to Choose Date</t>
        </xpath>
        <xpath expr="//div[@id='payment_method']/t/t[13]" position="replace">
            <t t-set="back_button_link" t-value="'/shop/choose/date'"/>
        </xpath>
    </template>

    <!-- checkout -->
    <template id="inherit_checkout" inherit_id="website_sale.checkout">
        <xpath expr="//div[@id='wrap']/div/div/div[3]/div[2]/a[1]" position="replace">
            <a role="button" href="/shop/choose/date" class="btn btn-secondary mb32">
                <i class="fa fa-chevron-left"/>
                <span>Back</span>
            </a>
        </xpath>
    </template>

    <!-- address -->
    <template id="inherit_address" inherit_id="website_sale.address" name="Address Management">
        <xpath expr="//form/div[2]/a[1]" position="replace">
            <a role="button" t-att-href="mode == ('new', 'billing') and '/shop/choose/date' or '/shop/checkout'" class="btn btn-secondary mb32">
                <i class="fa fa-chevron-left"/>
                <span>Back</span>
            </a>
        </xpath>
    </template>

    <!-- cart -->
    <template id="inhrited_cart" inherit_id="website_sale.cart" name="Shopping Cart">
        <xpath expr="//div['@id=wrap']/div[1]/div/div[2]/div/div/a[1] " position="replace">
            <a role="button" href="/booking" class="btn btn-secondary mb32 d-none d-xl-inline-block">
                <span class="fa fa-chevron-left" />
                <span class="">Continue Shopping</span>
            </a>
        </xpath>
        <xpath expr="//div['@id=wrap']/div[1]/div/div[2]/div/div/a[2] " position="replace">
            <a role="button" href="/shop/choose/date" class="btn btn-primary float-right d-none d-xl-inline-block">
                <span class="">Choose Date</span>
                <span class="fa fa-chevron-right" />
            </a>
        </xpath>
    </template>

    <!-- wizard checkout -->
    <template id="inherit_wizard_checkout" inherit_id="website_sale.wizard_checkout" name="Wizard Checkout">
        <xpath expr="//div/div/div/div/a[1]" position="after">
            <a class="no-decoration" t-att-href="step&gt;=15 and '/shop/choose/date' or '#'">
                <div id="wizard-step15" t-att-class="'progress-wizard-step %s' % (step == 15 and 'active' or step&gt;15 and 'complete' or 'disabled')">
                    <div class="progress-wizard-bar d-none d-md-block"/>
                    <span class="progress-wizard-dot d-none d-md-inline-block"></span>
                    <div class="text-center progress-wizard-steplabel">Choose date</div>
                </div>
            </a>
        </xpath>
    </template>

    <!-- choose date tab -->
    <template id="choose_date" name="Choose Appointment Date">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container oe_website_sale py-2">
                    <div class="row">
                        <div class="col-12">
                            <t t-call="website_sale.wizard_checkout">
                                <t t-set="step" t-value="15" />
                            </t>
                        </div>
                        <div class="col-12 col-xl-8 oe_cart">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="form1" action="/choose/date" method="post" onsubmit="return validateForm()">
                                        <div class="choose_appointment_booking mt-4">
                                            <t t-if="appoint_date_alert">
                                                <div class="alert alert-danger" role="alert">
                                                    Please select a date
                                                </div>
                                            </t>
                                            <t t-if="select_time_slots_alert">
                                                <div class="alert alert-danger" role="alert">
                                                    Please select another date.
                                                </div>
                                            </t>
                                            <div class="heading mt-4">
                                                <img src="/theme_vivre/static/src/images/calendar.png" /> <h3>Choose Your Appointment Booking</h3>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="appoint_date">Choose Appointment Date</label>
                                                    <input type="text" name="appoint_date" class="form-control" id="appoint_date" readonly="readonly" placeholder="Choose Date" />
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="select_time_slots">Choose Appointment Time Slot:</label>
                                                        <select class="form-control" name="select_time_slots" id="select_time_slots"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a role="button" href="/shop/cart" class="btn btn-secondary mb32 d-none d-xl-inline-block">
                                            <span class="fa fa-chevron-left" />
                                            <span class="">Return to Cart</span>
                                        </a>
                                        <button type="submit" class="btn btn-primary float-right d-none d-xl-inline-block">
                                            <span class="">Process Checkout</span>
                                            <span class="fa fa-chevron-right" />
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-xl-4">

                        </div>
                    </div>
                </div>
                <div class="oe_structure" id="oe_structure_website_sale_cart_2"/>
            </div>
        </t>
    </template>

	<!-- cart icon -->
    <template id="vivre_header" inherit_id="website_sale.header" name="Header Shop My Cart Link">
        <xpath expr="//ul[@id='top_menu']/li[@id='my_cart']" position="replace">
            <li id="my_cart"/>
        </xpath>

        <xpath expr="//ul[@id='top_menu']" position="after">
            <t t-set="website_sale_order" t-value="website.sale_get_order()" />
            <ul class="nav navbar-nav text-right ml-auto" id="user_info">
                <li id="vivre_my_cart" t-attf-class="nav-item#{'' if website_sale_order and website_sale_order.cart_quantity else ' '}">
                    <a href="/shop/cart" class="nav-link">
                        <span class="shopping-cart">
                            <img src="/theme_vivre/static/src/images/shopping_cart.png" height="20px" width="20px"/>
                            <t>
                                <sup t-attf-class="my_cart_quantity p-1"  style="border:1px solid black;">
                                    <t t-esc="website_sale_order.cart_quantity" />
                                </sup>
                            </t>
                        </span>
                    </a>
                </li>
            </ul>
        </xpath>
    </template>

	<!-- login icon -->
    <template id="vivre_portal_show_sign_in" inherit_id="portal.portal_show_sign_in" name="Show Sign In">
        <xpath expr="//ul[@id='top_menu']/li[last()]" position="replace">
        </xpath>
    </template>

    <!-- user icon -->
    <template id="vivre_frontend_layout" inherit_id="portal.frontend_layout" name="Main Frontend Layout">
        <xpath expr="//ul[@id='top_menu']/li[@class='nav-item dropdown']" position="replace">
        </xpath>

        <xpath expr="//li[@id='vivre_my_cart']" position="before">
            <li class="nav-item dropdown" id="user-signup" t-ignore="true" t-if="not user_id._is_public()">
                <a href="#" class="nav-link" data-toggle="dropdown">
                    <span class="pr-1">
                        <img src="/theme_vivre/static/src/images/user_login.png" height="20px" width="20px"/>
                    </span>
                </a>
                <div class="dropdown-menu js_usermenu" role="menu">
                    <a href="/my/home" role="menuitem" class="dropdown-item">My Account</a>
                    <a id="o_logout" class="dropdown-item" t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a>
                </div>
            </li>
        </xpath>

         <xpath expr="//li[@id='vivre_my_cart']" position="before">
            <span class="nav-item divider" groups="base.group_public"/>
            <span groups="base.group_public" id="log-in" class="nav-item log-in" style="float:right;display:block;">
                <a t-attf-href="/web/login" class="nav-link">
                    <img src="/theme_vivre/static/src/images/user_login.png" height="20px" width="20px"/>
                </a>
            </span>
        </xpath>
    </template>

	<!-- Footer -->
    <template id="livila_footer" inherit_id="website.layout" name="Footer">
       <xpath expr="//footer" position="replace">
            <footer class="footer">
                <div class="container">
					<div class="row">
						<div class="col-md-6">
							<div class="footer_logo">
								<img t-att-src="'/logo.png?company=%s' % res_company.id" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
							</div>
						</div>
						<div class="col-md-6">
							<div class="float_links">
								<div class="footer_social_links">
									<span class="social_links">
										<p class="pr-3">Follow Us</p>
									</span>
									<span class="social_links">
										<a t-if="website.social_facebook" class="social_link" t-att-href="website.social_facebook">
											<i class="fa fa-facebook-square"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_twitter" class="social_link" t-att-href="website.social_twitter">
											<i class="fa fa-twitter"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_instagram" class="social_link" t-att-href="website.social_instagram">
											<i class="fa fa-instagram"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_youtube" class="social_link" t-att-href="website.social_youtube">
											<i class="fa fa-youtube-play"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_linkedin" class="social_link" t-att-href="website.social_linkedin">
											<i class="fa fa-linkedin"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_github" class="social_link" t-att-href="website.social_github">
											<i class="fa fa-github"/>
										</a>
									</span>
									<span class="social_links">
										<a t-if="website.social_googleplus" class="social_link" t-att-href="website.social_googleplus" rel="publisher">
											<i class="fa fa-google-plus-square"/>
										</a>
									</span>
								</div>
							</div>
						</div>
					</div>
                    <div class="row">
                        <div class="offset-md-2 col-md-3 col-6 col-sm-6">
                            <h4>Explore</h4>
                            <t t-foreach="request.env['website.page'].sudo().search([])" t-as="page_object">
                                <t t-if="page_object.is_explore_page">
                                    <t t-set="url" t-value="page_object.url" />
                                    <span class="block"><a t-attf-href="{{url}}"><t t-esc="page_object.name" /></a></span>
                                </t>
                            </t>
                        </div>
                        <div class="col-md-3 col-6 col-sm-6">
                            <t t-set="company_object" t-value="request.env['res.company'].sudo().search([])" />
                            <h4>Visits</h4>
                            <span class="para-block">
                                <span class="block para">
                                    <t t-if="company_object.street"><t t-esc="company_object.street"/>, </t>
                                </span>
                                <span class="block para">
                                    <t t-if="company_object.city"><t t-esc="company_object.city"/> </t>
                                    <t t-if="company_object.state_id.name"><t t-esc="company_object.state_id.name"/> </t>
                                    <t t-if="company_object.zip"><t t-esc="company_object.zip"/>, </t>
                                </span>
                                <span class="block para">
                                    <t t-if="company_object.country_id.name"><t t-esc="company_object.country_id.name"/>. </t>
                                </span>
                            </span>
                            <h4>Contact us</h4>
                            <span class="para-block">
                                <span class="block para"><t t-esc="company_object.phone" /></span>
                                <span class="block para pr-3"><t t-esc="company_object.email" /></span>
                            </span>
                        </div>
                        <div class="col-md-3 col-6 col-sm-6">
                            <h4>Policy</h4>
                            <t t-foreach="request.env['website.page'].sudo().search([])" t-as="page_object">
                                <t t-if="page_object.is_policy_page">
                                    <t t-set="url" t-value="page_object.url" />
                                    <span class="block"><a t-attf-href="{{url}}"><t t-esc="page_object.name" /></a></span>
                                </t>
                            </t>
                        </div>
                    </div>
                    <div class="copyrights">
                        <h4>All Copyright Are Reserved By Vivre Salon.</h4>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>

	<template id="appointment_booking" name="Appointment Booking">
        <t t-call="website.layout">

            <div class="product_details_modal">
                <div class="product_details_modal_box">
                    <div class="product_details_modal_body">
                        <div class="product_details_header">
                            <h4>Product Details</h4>
                        </div>
                        <p class="product_details_gridbox modal_bottom_border">
                            <span class="product_details_item vivre_product_name"></span>
                            <span class="text-center product_details_item vivre_product_time"></span>
                            <span class="text-right product_details_item vivre_product_price"></span>
                        </p>
                        <p>
                            Description: <span class="vivre_product_description"></span>
                        </p>
                        <div class="product_details_header">
                            <button id="product_details_close" class="vivre_btn">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-md-8 offset-md-2 pt-5 pb-5">
                        <div class="appointment_booking">
                            <div id="accordion">
                                <t t-foreach="request.env['product.public.category'].sudo().search([('name', '!=', False)])" t-as="category">
                                    <div class="card">
                                        <div class="card-header" t-att-id="'heading-' + category.name.lower()">
                                            <h5 class="mb-0">
                                                <button class="btn btn-link" data-toggle="collapse" t-att-data-target="'#collapse-' + category.name.lower()" aria-expanded="true" aria-controls="'collapse-' + category.name.lower()">
                                                    <t t-esc="category.name" />
                                                </button>
                                            </h5>
                                        </div>
                                        <div t-att-id="'collapse-' + category.name.lower()" class="collapse" t-att-aria-labelledby="'heading-' + category.name.lower()" data-parent="#accordion">
                                            <div class="card-body shadow-sm">
                                                <t t-foreach="request.env['product.product'].sudo().search([('public_categ_ids', '=', category.id)])" t-as="category_product">
                                                    <div class="booking_category_products">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="booking_category_product_details">
                                                                    <div class="booking_category_product_price" t-esc="category_product.name" />
                                                                    <div t-esc="category_product.list_price"  t-options='{"widget": "monetary", "display_currency": category_product.currency_id}' />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <input name="product_id"  t-att-value="category_product.id" t-att-id="'vivre_product_id-' + str(category_product.id)" type="hidden"/>
                                                                <button class="vivre_btn" t-att-id="'product_details_view-' + str(category_product.name)">Product details</button>
                                                                <button class="vivre_btn" t-att-id="'vivre_product_id-' + str(category_product.id)">Add to cart</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <div class="pt-5">
                            <a href="/shop/cart" id="book_order" class="vivre_btn">Proceed to next</a>
                        </div>
                    </div>
                </div>
            </div>

        </t>
	</template>
</odoo>
